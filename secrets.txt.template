# Fly.io Secrets Template
# 
# Copy this file and fill in your actual values
# Then import using: flyctl secrets import < secrets.txt
#
# IMPORTANT: Keep this file secure and never commit it to version control!

# Storage access grants and buckets
XTREE_KEY_STORE_ACCESS_GRANT=your_key_store_access_grant_here
XTREE_KEY_STORE_BUCKET=keys
XTREE_PUBLISH_CONTEXT_STORE_ACCESS_GRANT=your_publish_context_access_grant_here
XTREE_PUBLISH_CONTEXT_STORE_BUCKET=publishcontext
XTREE_USER_SETTINGS_STORE_ACCESS_GRANT=your_user_settings_access_grant_here
XTREE_USER_SETTINGS_STORE_BUCKET=usersettings

# Table data access
XTREE_TABLE_DATA_ACCESS_GRANT=your_table_data_access_grant_here

# API Keys
XTREE_OPENAI_API_KEY=your_openai_api_key_here
XTREE_DOCUPIPE_API_KEY=your_docupipe_api_key_here
XTREE_COUNTER_API_KEY=your_counter_api_key_here
CLERK_SECRET_KEY=your_clerk_secret_key_here
CLERK_PUBLISHABLE_KEY_FOREST=your_clerk_publishable_key_forest_here

# Temporary values
XTREE_TEMP_ACCESSGRANT=your_temp_accessgrant_here
XTREE_TEMP_KEYHASH=your_temp_keyhash_here

# Entera configuration
ENTERA_CLIENT_ID=your_entera_client_id_here
ENTERA_CLIENT_SECRET=your_entera_client_secret_here

# Supabase configuration
SUPABASE_URL=your_supabase_url_here
SUPABASE_SERVICE_KEY=your_supabase_service_key_here
SUPABASE_PUBLISHABLE_KEY=your_supabase_publishable_key_here

# Gotenberg service (private network URL)
# After deploying Gotenberg, use: http://gotenberg-complexitree.internal:3000
GOTENBERG_URL=http://gotenberg-complexitree.internal:3000
